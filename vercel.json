{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/api/index.js"
    }
  ],
  "builds": [
    {
      "src": "server/api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "cleanUrls": true,  // Example usage if needed
  "trailingSlash": false  // Example usage if needed
}
